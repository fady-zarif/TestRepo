<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/img_base_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_doc_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_add_circle_black_36dp" />

            <TextView
                android:id="@+id/txt_doc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/active_color"
                android:gravity="center"
                android:text="Text"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_delete_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_delete_black_36dp"
            android:padding="4dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>